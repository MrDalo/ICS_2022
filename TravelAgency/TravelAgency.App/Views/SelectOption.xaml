<local:UserControlBase x:Class="TravelAgency.App.Views.SelectOption"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:local="clr-namespace:TravelAgency.App.Views"
                       xmlns:viewModels="clr-namespace:TravelAgency.App.ViewModels"
                       mc:Ignorable="d" 
                       
                       d:DesignHeight="450" d:DesignWidth="800">
    <Border Visibility="{Binding Path=IsVisible, Converter={StaticResource BoolToVis}}" BorderBrush="{StaticResource DefaultBackgroundBrush}" Background="{StaticResource DefaultBackgroundBrush}">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Style="{StaticResource WhiteButton}" Command="{Binding SearchRide}">Vyhľadať jazdu</Button>
        <Button Grid.Row="1" Style="{StaticResource WhiteButton}" Command="{Binding CreateRide}">Vytvoriť jazdu</Button>
            
    </Grid>
    </Border>
</local:UserControlBase>
