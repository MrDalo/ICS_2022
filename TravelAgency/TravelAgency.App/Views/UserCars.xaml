<local:UserControlBase x:Class="TravelAgency.App.Views.UserCars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TravelAgency.App.Views"
             xmlns:viewModels="clr-namespace:TravelAgency.App.ViewModels"
             xmlns:interactions="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:enums="clr-namespace:TravelAgency.Common.Enums;assembly=TravelAgency.Common"
             xmlns:extensions="clr-namespace:TravelAgency.App.Extensions"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource DefaultForegroundBrightBrush}"
          Visibility="{Binding CarListViewModel.IsVisible, Converter={StaticResource BoolToVis}}">

        

        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <ListView x:Name="CarList" HorizontalContentAlignment="Right" 
                  ItemsSource="{Binding CarListViewModel.Cars}"
                  d:ItemsSource="{d:SampleData ItemCount=3}"
                  Padding="20,0,0,0"
                  Cursor="Hand"
                  BorderBrush="Transparent"
                  ItemContainerStyle="{StaticResource SelectedItem3}"
                  >
      
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Width="auto" MinWidth="190" Height="auto" MaxHeight="300"
                            Padding="0,0,0,10"
                            >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                            <Border MinWidth="190" Width="Auto" Height="120" Grid.Row="0" CornerRadius="20,20,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="UniformToFill" ImageSource="{Binding ImgUrl}"/>
                                </Border.Background>
                            </Border>
                        
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Margin="10,0,0,0" Grid.Column="0" Grid.Row="0" Style="{StaticResource DataTitle}" Content="ŠPZ:" />
                            <Label Margin="10,0,0,0" Grid.Column="0" Grid.Row="1" Style="{StaticResource DataTitle}" Content="Výrobca:" />
                            <Label Margin="10,0,0,0" Grid.Column="0" Grid.Row="2" Style="{StaticResource DataTitle}" Content="Kapacita:" />
                            <Label Margin="10,0,0,0" Grid.Column="0" Grid.Row="3" Style="{StaticResource DataTitle}" Content="Typ:"/>
                            <Label Margin="10,0,0,0" Grid.Column="0" Grid.Row="4" Style="{StaticResource DataTitle}" Content="Registrácia:"/>

                                <Label Margin="0,0,10,0" Grid.Column="1" Grid.Row="0" Content="{Binding LicensePlate}"/>
                                <Label Margin="0,0,10,0" Grid.Column="1" Grid.Row="1" Content="{Binding Manufacturer}"/>
                                <Label Margin="0,0,10,0" Grid.Column="1" Grid.Row="2" Content="{Binding Capacity}"/>
                                <Label Margin="0,0,10,0" Grid.Column="1" Grid.Row="3" Content="{Binding CarType}"/>
                                <Label Margin="0,0,10,0" Grid.Column="1" Grid.Row="4" Content="{Binding RegistrationDate}"/>
                           
                        </Grid>

                    </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <interactions:Interaction.Triggers>
                <interactions:EventTrigger EventName="SelectionChanged">
                    <interactions:InvokeCommandAction Command="{Binding CarListViewModel.CarSelectedCommand}"
                                                      CommandParameter="{Binding ElementName=CarList, Path=SelectedItem}" />
                </interactions:EventTrigger>
            </interactions:Interaction.Triggers>

        </ListView>

        <Button
            Grid.Column="1"
            Grid.Row="1"
            Style="{StaticResource AddCircleButton}"
            Command="{Binding CarListViewModel.CarNewCommand}"
            Content="+"
            FontWeight="Bold"
            >
        </Button>


    </Grid>
</local:UserControlBase>
