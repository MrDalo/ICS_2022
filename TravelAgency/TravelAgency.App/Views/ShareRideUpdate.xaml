<UserControl x:Class="TravelAgency.App.Views.ShareRideUpdate"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:local="clr-namespace:TravelAgency.App.Views"
                       xmlns:viewModels="clr-namespace:TravelAgency.App.ViewModels"
                       mc:Ignorable="d" 
                       d:DesignHeight="450" d:DesignWidth="800"
                       d:DataContext="{d:DesignInstance viewModels:ShareRideDetailViewModel}">
    <Grid Background="{StaticResource DefaultBackgroundBrightBrush}" 
          Visibility="{Binding Path=Model, Converter={StaticResource NullToVisibilityConverter}}">
       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Margin="0,0,350,0"
            Content="Sofer"
            FontSize="25"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            />
        <Ellipse
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,0,250,0"
            Height="40" Width="40">

            <Ellipse.Fill>
                    <ImageBrush  Stretch="UniformToFill" ImageSource="{Binding Model.Model.Driver.PhotoUrl}"/>
                </Ellipse.Fill>

        </Ellipse>
        
        <Label
            Grid.Row="0"
            VerticalAlignment="Center"
            Margin="0,0,150,0"
            Content="{Binding Model.Model.Driver.Name}"
            FontSize="15"
            HorizontalAlignment="Center"
        />

        <Label
            Grid.Row="0"
            VerticalAlignment="Center"
            Margin="0,0,-100,0"
            Content="Kapacita"
            FontSize="25"
            FontWeight="Bold"
            HorizontalAlignment="Center"
        />

        <Label
            Grid.Row="0"
            VerticalAlignment="Center"
            Margin="0,0,-250,0"
            Content="1/5"
            FontSize="15"
            HorizontalAlignment="Center"
        />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            
            <Label
                Grid.Column="0"
                HorizontalAlignment="Center"
                Content="{Binding Model.LeaveTime}"
                />
            <Label
                Grid.Column="1"
                HorizontalAlignment="Center"
                Content="{Binding Model.ArriveTime}"
            />
            <Label
                Grid.Column="2"
                HorizontalAlignment="Left"
                Content="{Binding Model.FromPlace}"
            />
            <Label
                Grid.Column="2"
                HorizontalAlignment="Right"
                Content="{Binding Model.ToPlace}"
            />
        </Grid>

        <ListView Width="Auto" Grid.Row="2" HorizontalContentAlignment="Stretch" SelectedItem="{Binding SelectedPassenger}" ItemsSource="{Binding Passengers}">
    
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Transparent"  BorderThickness="1" CornerRadius="10" Background="#eeeeee">
                        <Grid HorizontalAlignment="Stretch" Height="80" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Content="{Binding Passenger.Name}"
                                Padding="10"
                                VerticalAlignment="Center"
                                FontSize="25"
                                
                                />
                            <Button Grid.Column="1" Style="{StaticResource ConfirmButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="100" Content="Odobrat" Padding="10,0,10,0" Margin="10,0,10,0"/>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="3" Style="{StaticResource ConfirmButton}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="200" Content="Zrušiť jazdu" Padding="10,0,10,0" Margin="10,0,10,0"
                Command="{Binding DeleteCommand}"/>
        <Button Grid.Row="3" Style="{StaticResource ConfirmButton}" Visibility="{Binding Path=SelectedPassenger, Converter={StaticResource NullToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="200" Content="Odobrať" Padding="10,0,10,0" Margin="10,0,10,0"
                Command="{Binding DeletePassengerCommand}"/>
        <Button Grid.Row="3" Style="{StaticResource ConfirmButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Height="50" Width="50" Content="X" Padding="10,0,10,0" Margin="10,0,10,0"
                Command="{Binding CloseCommand}"/>

    </Grid>
</UserControl>
