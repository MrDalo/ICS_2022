      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchRide">

    <Grid Background="{StaticResource DefaultBackgroundBrightBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
