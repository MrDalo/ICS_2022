<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Default Brushes for the application-->
 
    <SolidColorBrush x:Key="DefaultForegroundBrightBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DefaultForegroundDarkBrush" Color="#000000"/>

    <SolidColorBrush x:Key="DefaultAddButtonBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="DefaultAddButtonHoverBrush" Color="#D0D0D0"/>

    <SolidColorBrush x:Key="DefaultBackgroundBrightBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="#E4002B"/>
    <SolidColorBrush x:Key="DefaultBackgroundBrushHover" Color="#FFFF7575"/>
</ResourceDictionary>